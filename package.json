{
    "name": "klontong-server",
    "version": "1.0.0",
    "description": "TypeScript + Routing Controllers + Express API Server",
    "scripts": {
        "start": "npm run build && npm run build:tsc && cross-env NODE_ENV=production node dist/server.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "build": "wireit",
        "build:tsc": "wireit",
        "build:modules:inventory": "wireit"
    },
    "wireit": {
        "build": {
            "command": "swc src -d dist --source-maps --copy-files",
            "dependencies": [
                "build:modules:inventory"
            ]
        },
        "build:tsc": {
            "command": "tsc && tsc-alias",
            "dependencies": [
                "build:modules:inventory"
            ]
        },
        "build:modules:inventory": {
            "command": "pnpm --filter @brik/inventory-service build",
            "files": [
                "modules/inventory/**/*.ts",
                "modules/inventory/interface.ts",
                "modules/inventory/inventory.symbol.ts",
                "modules/inventory/inventory.module.ts",
                "modules/inventory/inventory.shared.ts",
                "modules/inventory/types.ts",
                "modules/inventory/tsconfig.json"
            ],
            "output": [
                "modules/inventory/lib/**"
            ]
        }
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mfadl1/klontong-server/issues"
    },
    "homepage": "https://github.com/mfadl1/klontong-server#readme",
    "dependencies": {
        "@types/mongoose": "^5.11.97",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "class-validator-jsonschema": "^5.0.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "fs": "^0.0.1-security",
        "glob": "^8.0.3",
        "helmet": "^7.0.0",
        "hpp": "^0.2.3",
        "inversify": "^6.0.1",
        "morgan": "^1.10.0",
        "path": "^0.12.7",
        "routing-controllers": "^0.10.4",
        "routing-controllers-openapi": "^4.0.0",
        "swc": "^1.0.11",
        "tslib": "^2.6.2",
        "winston": "^3.10.0",
        "winston-daily-rotate-file": "^4.7.1",
        "wireit": "^0.14.0"
    },
    "devDependencies": {
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.44",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.3",
        "@types/cookie-parser": "^1.4.4",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/glob": "^8.1.0",
        "@types/hpp": "^0.2.2",
        "@types/node": "^20.6.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0"
    }
}
